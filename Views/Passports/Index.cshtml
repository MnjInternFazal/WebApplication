@model IEnumerable<WebApplication1.Models.Passport>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfIssue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfExpiry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasValidVisa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOpenToTravel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfIssue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfExpiry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasValidVisa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOpenToTravel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personal.PersonalId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PassportId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PassportId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PassportId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
