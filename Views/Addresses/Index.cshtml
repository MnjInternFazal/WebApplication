@model IEnumerable<WebApplication1.Models.Address>

@{
    ViewData["Title"] = "Index";
}
<style>
    .container {
        margin-left: auto; /* This will push the container to the right */
        margin-right: 20px; /* Adjust this value as needed */
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        /* Style the table header */
        .table th {
            background-color: #f2f2f2;
            border: 1px solid #dddddd;
            padding: 8px;
            text-align: left;
        }

        /* Style the table rows */
        .table td {
            border: 1px solid #dddddd;
            padding: 8px;
        }

        /* Style alternate rows differently */
        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        /* Style table hover effect */
        .table tr:hover {
            background-color: #f2f2f2;
        }

    #searchInput {
        padding: 10px;
        border: 2px solid #ccc;
        border-radius: 25px;
        outline: none;
        font-size: 16px;
        transition: border-color 0.3s ease;
    }

        #searchInput:focus {
            border-color: #007bff;
        }

    #searchButton {
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

        #searchButton:hover {
            background-color: #0056b3;
        }
</style>
<h1>Address</h1>
<br />
<input type="text" id="searchInput" placeholder="Search...">
<button id="searchButton">Search</button>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AddressType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HouseNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Locality)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PinCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Period)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telephone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mobile)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InstantMessagingId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Personal)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddressType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HouseNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Locality)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PinCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Period)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstantMessagingId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Personal.PersonalId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AddressId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.AddressId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.AddressId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    function searchTable() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("searchInput");
        filter = input.value.toUpperCase();
        table = document.querySelector(".table");
        tr = table.getElementsByTagName("tr");

        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td");
            for (var j = 0; j < td.length; j++) {
                txtValue = td[j].textContent || td[j].innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                    break;
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }

    document.getElementById("searchButton").addEventListener("click", searchTable);
</script>