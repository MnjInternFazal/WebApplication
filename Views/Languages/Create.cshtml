@model WebApplication1.Models.Language

@{
    ViewData["Title"] = "Create";
}
<link href="~/css/stylesheet1.css" rel="stylesheet" />
<div class="header">
    <h1>Application Form</h1>
    <img src="~/image/logo.png" style="height:80px; width:90px;" class="logo" />
</div>
<div class="container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table class="table">
            <h4>Languages Known</h4>
            <thead>
                <tr>
                    <th><label asp-for="PersonalId" class="control-label"></label></th>
                    <th><label asp-for="LanguageName" class="control-label"></label></th>
                    <th><label asp-for="Speak" class="control-label"></label></th>
                    <th><label asp-for="Read" class="control-label"></label></th>
                    <th><label asp-for="Write" class="control-label"></label></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="languageTable">
                <!-- Initial row -->
                <tr>
                    <td>
                        <select asp-for="PersonalId" class="form-control" asp-items="ViewBag.PersonalId"></select>
                    </td>
                    <td>
                        <input asp-for="LanguageName" class="form-control" />
                    </td>
                    <td>
                        <select asp-for="Speak" class="form-control">
                            <option value="">-- Select --</option>
                            <option value="True">Yes</option>
                            <option value="False">No</option>
                        </select>
                    </td>
                    <td>
                        <select asp-for="Read" class="form-control">
                            <option value="">-- Select --</option>
                            <option value="True">Yes</option>
                            <option value="False">No</option>
                        </select>
                    </td>
                    <td>
                        <select asp-for="Write" class="form-control">
                            <option value="">-- Select --</option>
                            <option value="True">Yes</option>
                            <option value="False">No</option>
                        </select>
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger" onclick="deleteRow(this)">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
        <button type="button" class="btn btn-primary" onclick="addRow()">Add Row</button>
        <br /><br /><hr />
        <div class="form-group">
            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Create", "Passports")'">Back </button>
            <button type="submit" class="btn btn-primary">Save </button>
            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Create", "Families")'">Next </button>
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
